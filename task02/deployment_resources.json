{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "lambda:InvokeFunctionUrl"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:lambda:${region}:${account_id}:function:${resources_prefix}hello_world${resources_suffix}"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy"
  }
}